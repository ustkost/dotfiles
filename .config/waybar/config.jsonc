    "spacing": 0,
    "height": 0,

    "margin-top": 8,
    "margin-right": 8,
    "margin-bottom": 0,
    "margin-left": 8,

    "modules-left": [
        "hyprland/workspaces"
    ],

    "modules-center": [
        "clock"
    ],

    "modules-right": [
        "tray",
				"custom/vpn",
        "hyprland/language",
        "battery",
        "network",
        "pulseaudio",
    ],

    "hyprland/workspaces": {
        "disable-scroll": true,
